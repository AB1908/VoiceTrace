# Required: path to your Obsidian vault
OBSIDIAN_VAULT_PATH=~/Documents/ObsidianVault

# Optional: Claude for complex task breakdown routing
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Models
WHISPER_MODEL=base
LOCAL_LLM_MODEL=meta-llama-3-8b-instruct
CLAUDE_MODEL=claude-sonnet-4-5

# Local OpenAI-compatible endpoint (LM Studio)
LOCAL_LLM_API_BASE=http://192.168.1.95:1234/v1
LOCAL_LLM_API_KEY=
LOCAL_LLM_CONNECT_TIMEOUT_SEC=5
LOCAL_LLM_READ_TIMEOUT_SEC=120
LOCAL_LLM_RETRIES=2
LOCAL_LLM_RETRY_BACKOFF_SEC=2

# Feature flags
USE_CLAUDE_FOR_COMPLEX=true
ANONYMIZE_FOR_CLAUDE=true

# Watch settings
WATCH_SETTLE_SECONDS=2
TRANSCRIPTION_PROGRESS_EVERY=10
